<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.BVRec.BVRecApp"
	version     = "1.0.0" >
<!-- versionCode = "10" -->

<!-- versionCode is optional and Android only -->

  <name>BV Rec Helper</name>
  <preference name="orientation" value="portrait" />
  <preference name="SplashScreen" value="splash" />
  <icon src="Pictures/icon.png" />
  
  <splash src="Pictures/splash.png" />

  <description>
      Designed to help visitors find fields, restrooms, parking, food, and more! Also includes
	  access to other important information to the Blue Valley Recreation complex.
  </description>
  
	
  <author href="http://www.bluevalleyrec.org/">
      Blue Valley Rec
  </author>

</widget>

