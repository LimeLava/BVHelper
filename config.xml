<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BV Rec Helper</name>
    <description>
        Designed to help visitors find fields, restrooms, parking, food, and more! Also includes
		access to other important information to the Blue Valley Recreation complex.
    </description>
	<icon src="Pictures/Icons/icon.png" />
	<splash src="Pictures/Icons/splash.png" />
    <author email="dev@cordova.apache.org" href="http://www.bluevalleyrec.org/">
        Blue Valley Rec
    </author>
    <content src="index.html" />
	<preference name="orientation" value="portrait" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
